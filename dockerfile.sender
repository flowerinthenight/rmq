FROM golang
ARG version
COPY examples/ /go/src/github.com/flowerinthenight/rmq/examples/
COPY vendor/ /go/src/github.com/flowerinthenight/rmq/vendor/
COPY rabbitmq.go /go/src/github.com/flowerinthenight/rmq/rabbitmq.go
WORKDIR /go/src/github.com/flowerinthenight/rmq/examples/sender/
RUN CGO_ENABLED=0 GOOS=linux go build -v -a -installsuffix cgo -o sender .

