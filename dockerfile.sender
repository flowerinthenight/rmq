# Note that these env variables are visible via `docker history`, 'docker inspect`.
# Never upload to public registry; only ECR (current).
RUN apk --no-cache add ca-certificates
ENV RABBITMQ_HOST=rabbitmq.default.svc.local RABBITMQ_PORT=5672 RABBITMQ_USER=admin RABBITMQ_PASS=q8qdyaRf9SQu38aDTjTB
WORKDIR /sender/
COPY --from=0 /go/src/github.com/flowerinthenight/rmq/examples/sender/sender .
ENTRYPOINT ["/sender/sender"]
